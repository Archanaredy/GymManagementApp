<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:src="@drawable/schedule"
        app:tint="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Week Day"
        android:textColor="@color/text_sub"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/et_bg"
        android:maxLines="3"
        android:text=""
        android:textColor="@color/white"
        android:textColorHint="@color/text_sub"
        android:textSize="16dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start time"
        android:textColor="@color/text_sub"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/openingtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/et_bg"
        android:clickable="true"
        android:drawableRight="@drawable/ic_baseline_access_time_24"
        android:drawableTint="@color/text_sub"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:text="Schedule start time"
        android:textColor="@color/text_sub"
        android:textColorHint="@color/text_sub"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="End time"
        android:textColor="@color/text_sub"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/closetime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/et_bg"
        android:clickable="true"
        android:drawableRight="@drawable/ic_baseline_access_time_24"
        android:drawableTint="@color/text_sub"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:text="Schedule end time"
        android:textColor="@color/text_sub"
        android:textColorHint="@color/text_sub"
        android:textSize="16dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true"
        android:padding="20dp"
        android:visibility="gone" />


</LinearLayout>